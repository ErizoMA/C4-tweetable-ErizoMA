<div class="card">
  <h1>Edit Tweet</h1>
</div>
<div class="card">
  <%= form_with model: @tweet, url: { action: "update" } do |form| %>
    <%= form.text_area :body ,placeholder: "Remember to think before write ..." ,class: "user-form" %>
    <%= form.submit  "Edit",class: "btn btn--primary btn--fit-content" %>
  <% end %>
</div>
