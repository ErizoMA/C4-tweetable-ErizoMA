<div class="card">
  <h1>Sign Up</h1>
</div>
<div class="card">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="card-form">
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <div class="input__container">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "input__content "%>
        </div>
      </div>

      <div class="field">
        <%= f.label :username %><br />
        <div class="input__container">
          <%= f.text_field :username, autofocus: true, autocomplete: "username" , class: "input__content "%>
        </div>
      </div>

      <div class="field">
        <%= f.label :name %><br />
        <div class="input__container">
          <%= f.text_field :name, autofocus: true, autocomplete: "name" , class: "input__content "%>
        </div>
      </div>

      <div class="field">
        <%= f.label :avatar %><br />
        <div class="input__container input__container--w">
          <%= f.file_field :avatar %>
        </div>
      </div>

      <div class="field">
        <%= f.label :password %>
        <div class="input__container">
          <%= f.password_field :password, autocomplete: "new-password", class: "input__content " %>
        </div>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <div class="input__container">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input__content " %> 
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Submit",class: "btn btn--primary btn--fit-content" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>